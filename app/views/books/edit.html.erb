<main>
<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div id="error">
 <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
 <ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
 </ul>
</div>
<% end %>

<%= form_with model:@book do |f| %>

<div class="box1">Title<br>
<%= f.text_field :title %>
</div>

<div class="box1">Body<br>
<%= f.text_area :body %>
</div>

<div class="box1">
<%= f.submit  %>
</div>

<% end %>

<span><%= link_to "Show" ,book_path(@book.id) %></span>
|
<span><%= link_to "Back" ,books_path %></span>
</main>