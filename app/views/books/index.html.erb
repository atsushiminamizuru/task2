<h1>Books</h1>

<table>
    <thead>
        <th>
            <tr>Title</tr>
            <tr>Body</tr>
            <tr></tr>
            <tr></tr>
            <tr></tr>
        </th>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <th>
            <tr><%= book.title %></tr>
            <tr><%= book.body %></tr>
            <tr><%= link_to "Show" ,book_path(book.id) %></tr>
            <tr><%= link_to "Edit" ,edit_book_path(book.id) %></tr>
            <tr><%= link_to "Destroy" ,book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></tr>
        </th>
        <% end %>
    </tbody>
</table>

<h1>New book</h1>
<% if @book.errors.any? %>
 <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
 <ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<%= form_with model:@book do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit  %>

<% end %>